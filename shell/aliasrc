# Alias
alias poff="sudo poweroff"
alias poweroff="sudo poweroff"
alias reboot="sudo reboot"
alias visudo="sudo EDITOR=nvim visudo"

alias p="paru"
alias pS="paru -S"
alias psu="paru -Syu"

alias pmix="pulsemixer"

alias ls="exa --icons --git"
alias la="ls -a"
alias ll="ls -lh"
alias du='du -h'
alias df='df -h'

alias cat="bat"
alias fd="fd --hidden"
alias ps="procs"
alias vim="nvim"
alias v="nvim"
alias mutt='neomutt && pkill -RTMIN+12 dwmblocks'
alias lf='lfrun'

alias ufws="sudo ufw status numbered"

alias mpow="sh $HOME/.scripts/mpow.sh"
alias msfconsole="msfconsole --quiet -x \"db_connect $USER@msf\""
alias py="python"
alias za="zathura"

# Git
alias gs='git status'
alias gd='git diff'
alias gck='git checkout'
alias ga='git add'
alias gA='git add -A'
alias gc='printf "Enter commit message: "; read msg; if [ -n "$msg" ]; then git commit -m $msg; else git commit; fi'
alias gp='git push'
