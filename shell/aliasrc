# Alias
alias poff="sudo poweroff"
alias poweroff="sudo poweroff"
alias reboot="sudo reboot"
alias p="sudo pacman"
alias visudo="sudo EDITOR=nvim visudo"

alias pmix="pulsemixer"

alias ls="exa --icons"
alias la="exa -a --icons"
alias ll="exa -lh --icons"
alias du='du -h'
alias df='df -h'

alias cat="bat"
alias fd="fd --hidden"
alias ps="procs"
alias vim="nvim"
alias v="nvim"
alias mutt='neomutt && pkill -RTMIN+12 dwmblocks'
alias lf='lfrun'

alias ufws="sudo ufw status numbered"

alias mpow="sh $HOME/.scripts/mpow.sh"
alias msfconsole="msfconsole --quiet -x \"db_connect $USER@msf\""
alias py="python"
alias cal='ikhal && clear'

# Git
alias gs='git status'
alias gd='git diff $@'
alias ga='git add $@'
alias gA='git add -A'
alias gc='git commit -m $1'
alias gp='git push'
